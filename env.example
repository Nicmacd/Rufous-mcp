# Rufous MCP Server Configuration
# Copy this file to .env and update with your actual values

# ============================================
# PDF PROCESSING CONFIGURATION (NEW PRIMARY)
# ============================================

# Database path (optional - defaults to ~/rufous_data.db)
RUFOUS_DATABASE_PATH=

# Directory to store uploaded statement files
RUFOUS_STATEMENTS_DIRECTORY=./statements

# Automatically categorize transactions using Claude
RUFOUS_AUTO_CATEGORIZE=true

# Enable PDF statement processing
RUFOUS_PDF_PROCESSING=true

# ============================================
# DATA STORAGE CONFIGURATION
# ============================================

# Data Storage Strategy
# false = session-based caching (recommended for MVP)
# true = persistent local storage (for advanced analytics)
USE_PERSISTENT_STORAGE=false

# Session Configuration (for non-persistent mode)
SESSION_TIMEOUT_MINUTES=30

# Logging
LOG_LEVEL=INFO

# Security Settings
MAX_TRANSACTION_DAYS=365

# Rate Limiting
API_RATE_LIMIT_PER_MINUTE=60 