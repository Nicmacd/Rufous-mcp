# Rufous MCP Server Configuration
# Copy this file to .env and update with your actual values

# Flinks API Configuration
# Get your Customer ID from https://flinks.com/
FLINKS_CUSTOMER_ID=your_flinks_customer_id_here

# Flinks API URL
# Sandbox (for testing): https://toolbox-api.private.fin.ag/v3
# Production: https://your-company-api.private.fin.ag/v3
FLINKS_API_URL=https://toolbox-api.private.fin.ag/v3

# Data Storage Strategy
# false = session-based caching (recommended for MVP)
# true = persistent local storage (for advanced analytics)
USE_PERSISTENT_STORAGE=false

# Session Configuration (for non-persistent mode)
SESSION_TIMEOUT_MINUTES=30

# Logging
LOG_LEVEL=INFO

# Security Settings
MAX_TRANSACTION_DAYS=365

# Rate Limiting
API_RATE_LIMIT_PER_MINUTE=60 